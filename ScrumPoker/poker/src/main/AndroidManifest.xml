<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:dist="http://schemas.android.com/apk/distribution"
          xmlns:tools="http://schemas.android.com/tools"
          package="nl.entreco.scrumpoker.poker">

    <dist:module
            dist:instant="true"
            dist:onDemand="false"
            dist:title="@string/title_feature_poker">
        <dist:fusing dist:include="true"/>
    </dist:module>

    <application>
        <activity
                android:name="nl.entreco.scrumpoker.poker.select.SelectCardActivity"
                android:theme="@style/AppTheme"
                android:label="@string/title_activity_poker">
            <tools:validation testUrl="https://poker.entreco.nl/"/>

            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:scheme="https"
                        android:host="poker.entreco.nl"
                        />
            </intent-filter>
            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:scheme="http"
                        android:host="poker.entreco.nl"
                        />
            </intent-filter>
        </activity>
    </application>

</manifest>